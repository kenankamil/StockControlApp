@model List<ProductListDto>

<div class="d-flex my-2 justify-content-end">
    <a type="button" class="btn btn-primary m-2" asp-area="" asp-controller="Product" asp-action="CreateProduct">Add New Product</a>
    <a type="button" class="btn btn-secondary m-2" asp-area="" asp-controller="ProductSale" asp-action="ProductSaleList">Sales List Report</a>
</div>
<table class="table table-bordered">
    <thead>
        <tr>
            <th scope="col">ProductName</th>
            <th scope="col">Price</th>
            <th scope="col">Stock</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ProductName</td>
                <td>@item.Price</td>
                <td>@item.Stock</td>
                <td>
                    <a type="button" class="btn btn-success btn-sm" asp-action="SellProduct" asp-controller="Product" asp-route-id="@item.Id">Sell</a>
                    <a type="button" class="btn btn-primary btn-sm" asp-action="UpdateProduct" asp-controller="Product" asp-route-id="@item.Id">Update</a>
                    <a type="button" class="btn btn-danger btn-sm" asp-action="RemoveProduct" asp-controller="Product" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }

    </tbody>
</table>